{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "kubernetes": {
    "fileMatch": [
      "cluster/apps/.+\\.yaml$",
      "cluster/core/.+\\.yaml$",
      "cluster/bootstrap/argocd/.+\\.yaml$"
    ]
  },
  "ansible": {
    "fileMatch": [
      "ansible/(^|/)requirements\\.ya?ml$",
      "ansible/(^|/)requirements\\.in$",
      "ansible/(^|/)galaxy\\.ya?ml$"
    ]
  },
  "prHourlyLimit": 10
}
